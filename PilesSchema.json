{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/ova450/JsonSchemes/PilesSchema",
  "title": "Piles Json Schema",
  "version": "9.4.15",
  "description": "Корневая структура, содержащая массив пайлов",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Ссылка на схему для валидации"
    },
    "piles": {
      "type": "array",
      "description": "Массив пайлов",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ova450/JsonSchemes/refs/heads/master/PileSchema.json"
      }
    }
  },
  "required": [ "piles" ],
  "additionalProperties": false,
  "comment": "Корневой объект содержит только поле 'piles' и опционально '$schema'."
}